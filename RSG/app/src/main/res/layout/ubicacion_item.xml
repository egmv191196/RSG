<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:layout_margin="5dp"
    android:elevation="10dp">
    
    <TextView
        android:id="@+id/tv_nombreUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombreubicacion"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_typeUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/typeUbicacion"
        android:textStyle="italic"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_nombreUbicacion"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/purple_200"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_typeUbicacion"/>

</androidx.constraintlayout.widget.ConstraintLayout>